{
  "compilerOptions": {
    "rootDir": "src",
    "outDir": "dist",
    "strict": true,
    "noImplicitAny": true,
    "sourceMap": true,
    "allowJs": false,
    "allowSyntheticDefaultImports": true,
    "lib": ["DOM", "ES2017"],
    "target": "ES6",
    "skipLibCheck": true,
    "removeComments": true,
    "module": "commonjs"
  },
  "ts-node": {
    "transpileOnly": true
  },
  "include": ["src/**/*"],
  "exclude": ["**/node_modules/**"]
}
